    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>


<script>
    var users=[];   // we created 
    var submitBtn=document.getElementById('submitForm');
    submitBtn.onclick= function(e){
            e.preventDefault();
            var inputFName= document.getElementById('fName');
            var inputlName= document.getElementById('lName');
            var inputAddress= document.getElementById('address');
            var inputContact= document.getElementById('contact')
            var inputEmail= document.getElementById('email');
            users.push({
                fName:inputFName.value,
                lName:inputlName.value,
                address:inputAddress.value,
                contact:inputContact.value,
                email:inputEmail.value
            });
          var tableDataBody = document.getElementById('tableBody');
          tableDataBody.innerHTML='';
          let slNo=0;
            users.forEach(element => {
                slNo++;
                tableDataBody.innerHTML= tableDataBody.innerHTML+ `<tr><td>${slNo}</td><td>${element.fName}</td><td>${element.lName}</td><td> ${element.contact}</td><td>${element.email}</td></tr>`;
            });
            var h1= document.getElementById('head1');
            console.log(h1.innerText)
            h1.innerText=` User Profile Data ${users.length} added`;
        }

</script>
    
